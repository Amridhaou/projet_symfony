{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

	<style>
		.card-title {
			opacity: 0.1;
			transition: 0.3s
		}
		.card-title:hover {
			opacity: 1
		}
	</style>
	<div
		class="jumbotron">


		{# <p>Nombre de clients maximal:
															{{ max_client - 2}}
															- 2</p> #}

		<div class="">
			<hr class="my-4">
			<p>le Dauphin propose une expérience gastronomique à travers une cuisine sans artifice.</p>
			<a class="btn btn-primary btn-lg" href="{{ path ('readme') }}" role="button">En savoir plus sur ce projet</a>
			<div class="button mt-4 text-center">
				<a class="btn btn-primary btn-lg" href="{{ path ('app_mealpublic_index') }}" role="button">Notre carte</a>
				<a class="btn btn-primary btn-lg ms-3" href="{{ path ('app_menuformule_index') }}" role="button">Nos menus</a>
			</div>
		</div>

		<div class="section-title mt-4 text-center">
			<h2>Pourquoi choisir
				<span>Notre Restaurant</span>
			</h2>
			<p>Ut possimus qui ut temporibus culpa velit eveniet modi omnis est adipisci expedita at voluptas atque vitae autem.</p>
		</div>


		<div class="row mt-4">
			<h2 class="text-center">Consultez notre carte</h2>
			{% for meal in meals |reverse %}
				<div class="col-md-4">
					<div class="card mt-4 text-center">
						<img src="{{ asset('uploads/') }}{{ meal.picture }}" alt="{{ meal.title }} " style="max-width: 10rem;" class="mt-2 ms-2">

						<div class="card-body">
							<h5 class="card-title">{{meal.title}}</h5>
							<p class="card-text">Descript.:
								{{ meal.description | u.truncate(20) }}...</p>


							<p class="card-text">Prix:
								{{meal.price}}
								€
							</p>

							{% if app.user %}

								<div class="text-center">
									<a href="{{ path('app_userreservation_edit', {'id': app.user.id}) }}" class="btn btn-primary mt-4">Réserver votre  table</a>
								</div>
							{% else %}
								<div class="text-center">
									<a href="{{ path ('app_reservation_new') }}" class="btn btn-primary mt-4">Réserver une table</a>

								</div>


							{% endif %}

						</div>
					</div>
				</div>
			{% else %}
				<tr>
					<td colspan="11">Pas de données</td>
				</tr>

			{% endfor %}
		</div>
		{% if app.user %}


			<div class="text-center">
				<a href="{{ path('app_userreservation_edit', {'id': app.user.id}) }}" class="btn btn-primary mt-4">Réserver votre  table</a>
			</div>
		{% else %}
			<div class="text-center">
				<a href="{{ path ('app_reservation_new') }}" class="btn btn-primary mt-4">Réserver une table</a>

			</div>


		{% endif %}

	</div>
	<div class="mt-4 container">
		<h1 class="text-center">Nos</h1>
		<h1 class="text-center">Horaires d'ouverture</h1>

		<hr>
		<table class="table text-center">

			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				{% for schedule in schedules %}
					<tr>
						<td>Lundi</td>
						<td>{{ schedule.monday }}</td>
					</tr>

					<tr>
						<td>Mardi</td>
						<td>{{ schedule.tuesday }}</td>
					</tr>

					<tr>
						<td>Mercredi</td>
						<td>{{ schedule.wednesday }}</td>
					</tr>

					<tr>
						<td>Jeudi</td>
						<td>{{ schedule.thursday }}</td>
					</tr>

					<tr>
						<td>Vendredi</td>
						<td>{{ schedule.friday }}</td>
					</tr>

					<tr>
						<td>Samedi</td>
						<td>{{ schedule.saturday }}</td>
					</tr>

					<tr>
						<td>Dimanche</td>
						<td>{{ schedule.sunday }}</td>
					</tr>

				{% endfor %}

			</tbody>
		</table>
	</div>




	{% endblock %}
