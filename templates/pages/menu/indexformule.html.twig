{% extends 'base.html.twig' %}

{% block title %}Liste des Menus
{% endblock %}

{% block body %}
   <style>
   img{
   width: 90px;
   			height: 90px;
   }
    </style>

    <h1 class="text-center">Liste des Menus</h1>

    {% for menu in menus %}
        <div class="container mt-4">
            <h2 class="text-center text-decoration-underline">{{ menu.title }}</h2>

            <div class="row">
                {% for option in options %}
                    {% if option.id == menu.Id %}
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h3 class="card-title text-center">{{ option.description }}</h3>
                                    <h4 class="card-subtitle text-center">{{ option.day }}</h4>
                                    <p class="card-text text-center">{{ option.price }} dt </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
<div class="card mb-4">
 <div class="card-body">
<img src="{{ asset('assets/images/') ~ 'photo' ~ option.id ~ '.jpg' }}">
</div>
 </div>
</div>
                    {% endif %}
                {% endfor %}
            </div>

            <hr class="m-4">
        </div>
    {% endfor %}

	<div class="text-center">
		<a href="{{ path ('app_reservation_new') }}" class="btn btn-primary mt-4">RÃ©server une table</a>

	</div>
	</div>
	<div class="mt-4 container">
	<h1 class="text-center">Nos</h1>
	<h1 class="text-center">Horaires d'ouverture</h1>

	<hr>
	<table class="table text-center">

		<thead>
		<tr>
			<th></th>
			<th></th>
		</tr>
		</thead>

		<tbody>
		{% for schedule in schedules %}
			<tr>
				<td>Lundi</td>
				<td>{{ schedule.monday }}</td>
			</tr>

			<tr>
				<td>Mardi</td>
				<td>{{ schedule.tuesday }}</td>
			</tr>

			<tr>
				<td>Mercredi</td>
				<td>{{ schedule.wednesday }}</td>
			</tr>

			<tr>
				<td>Jeudi</td>
				<td>{{ schedule.thursday }}</td>
			</tr>

			<tr>
				<td>Vendredi</td>
				<td>{{ schedule.friday }}</td>
			</tr>

			<tr>
				<td>Samedi</td>
				<td>{{ schedule.saturday }}</td>
			</tr>

			<tr>
				<td>Dimanche</td>
				<td>{{ schedule.sunday }}</td>
			</tr>

		{% endfor %}

		</tbody>
	</table>
	</div>{% endblock %}